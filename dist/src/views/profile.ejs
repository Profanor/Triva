<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= 'Profile' %></title>
  <link rel="stylesheet" href="/stylesheets/profile.css" />
</head>
<body>
  <header>
    <h1><%= title %></h1>
    <button id="toggleTheme">Toggle Theme</button>
  </header>

  <section>
    <h2>Welcome to your profile, <%= user.fullname %>!</h2>

    <!-- Display user information -->
    <p>Email: <%= user.email %></p>
    <p>Gender: <%= user.gender %></p>
    <p>Phone: <%= user.phone %></p>
    <p>Address: <%= user.address %></p>

    <form action="/users/level" method="post">
      <button type="submit" class="start-quiz-button">Start Quiz</button>
    </form>

  </section>
  <footer>
    
  </footer>
  <script>
  document.addEventListener('DOMContentLoaded', function () {
  // Add an event listener to the start quiz button
  const startQuizButton = document.querySelector('.start-quiz-button');
  if (startQuizButton) {
    startQuizButton.addEventListener('click', function (event) {
      // Prevent the default behavior of the anchor tag
      event.preventDefault();

      // Redirect to the difficulty level
      window.location.href = '/users/level';
    });
  }
});

document.addEventListener('DOMContentLoaded', function () {
    const toggleThemeButton = document.getElementById('toggleTheme');
    const body = document.body;
    const section = document.querySelector('section');

    // Check the user's preference for theme mode from localStorage
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme) {
        body.classList.add(currentTheme);
        section.classList.add(currentTheme);
    }

    // Add event listener to the toggleThemeButton
    toggleThemeButton.addEventListener('click', function () {
        // Toggle the theme class on the body
        body.classList.toggle('dark');
        // Toggle the theme class on the section
        section.classList.toggle('dark');

        // Update localStorage with the current theme preference
        const theme = body.classList.contains('dark') ? 'dark' : 'light';
        localStorage.setItem('theme', theme);
    });
});

  </script>
</body>
</html>